<div class='calculator-container'>
  <div id='calculator'>

    <!-- TITLE -->

    <div id='title' class='text-center'>
      <h5><b>ELECTRONIC CALCULATOR</b></h5>
    </div>

    <!-- ENTRY BOX -->

    <div id='entrybox' class='text-right'>
      <div id='entry'>
        <p id='answer'>0</p>
      </div>
      <div id='history'>
        <p>0</p>
      </div>
    </div>

    <!-- BUTTONS -->

    <div id='buttons'>

      <button class='red calculator-button' value='ac'>AC</button>
      <button class='red calculator-button' value='ce'>CE</button>
      <button class="calculator-button" value='/'>&divide;</button>
      <button class="calculator-button" value='*'>x</button>

      <button class="calculator-button" value='7'>7</button>
      <button class="calculator-button" value='8'>8</button>
      <button class="calculator-button" value='9'>9</button>
      <button class="calculator-button" value='-'>-</button>

      <button class="calculator-button" value='4'>4</button>
      <button class="calculator-button" value='5'>5</button>
      <button class="calculator-button" value='6'>6</button>
      <button class="calculator-button" value='+'>+</button>


      <button class="calculator-button" value='1'>1</button>
      <button class="calculator-button" value='2'>2</button>
      <button class="calculator-button" value='3'>3</button>
      <button class="calculator-button" class='invisible'>N</button>

      <button class="calculator-button" id='zeroButton' value='0'>0</button>
      <button class="calculator-button" value='.'>.</button>
      <button class="calculator-button" id='equalButton' value='='>=</button>

    </div>
    <!-- end buttons -->
    <div id='tester'></div>
  </div>
  <div class="calculator-overlay"></div>
  <!-- end calculator -->
</div>